<div class="content gallery">
  <% @people.each do |person| %>
    <%= link_to person_path(person) do %>
      <div class="photo-image" style="background-image: url(<%= person.photo.thumb.url %>)"></div>
      <div class="overlay">
        <div><%= person.name%></div>
        <div><%= person.trajectory %></div>
      </div>
    <% end %>
  <% end %>
</div>