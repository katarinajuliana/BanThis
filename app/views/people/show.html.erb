<div class="content person">
  <div class="photo">
    <img src="<%= @person.photo_url %>">
  </div>
  
  <div class="details">
    <h2 class="name"><%= @person.name %></h2>
    <h2 class="trajectory"><%= @person.trajectory %></h2>
  
    <p class="bold">
      <%= @person.age %>, <%= @person.occupation %>
      <br>
      <%= @person.location %>
    </p>
  
    <p>
      <%= @person.story %>
    </p>
  
    <p>
      <div class="bold">Why did your family come to the United States?</div>
      <%= @person.migration_reason %>
    </p>
  
    <p>
      <div class="bold">What would the U.S. be missing out on if you or your people were banned?</div>
      <%= @person.value_prop %>
    </p>
  </div>
</div>