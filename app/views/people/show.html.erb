<% content_for :meta_image do %>
  <%= @person.photo.thumb.url %>
<% end %>

<div class="content person">
  <div class="photo">
    <div class="photo-image" style="background-image: url(<%= @person.photo.full.url %>)"></div>
    
    <% if @person.photographer %>
      <div class="photo-credit">Photo: <%= @person.photographer %></div>
    <% end %>
  </div>
  
  <h2 class="name"><%= @person.name %></h2>
  <h2 class="trajectory"><%= @person.trajectory %></h2>

  <p class="bold details">
    <%= @person.age %>, <%= @person.occupation %>
    <br>
    <%= @person.location %>
  </p>

  <% if @person.story %>
    <p>
      <span class="pre"><%= @person.story %></span>
    </p>
  <% end %>

  <% if @person.migration_reason %>
    <p>
      <span class="bold">Why did your family come to the United States?</span>
      <span class="pre"><%= @person.migration_reason %></span>
    </p>
  <% end %>

  <% if @person.value_prop %>
    <p>
      <span class="bold">What would the U.S. be missing out on if you or your people were banned?</span>
      <span class="pre"><%= @person.value_prop %></span>
    </p>
  <% end %>
  
  <% if @person.family && @person.family.people.length > 1 %>
    <div class="family gallery">
      <div class="bold center">Family Ties</div>
      <% @person.family.people.each do |member| %>
        <% unless member == @person %>
          <%= link_to person_path(member) do %>
          <div class="photo-image" style="background-image: url(<%= member.photo.thumb.url %>)"></div>
            <div class="overlay">
              <div><%= member.name%></div>
              <div><%= member.trajectory %></div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
<% if @prev %>
  <%= link_to @prev, class: 'page-through-link prev hide' do %>
    <div class="caret"></div>
  <% end %>
<% end %>
<% if @next %>
  <%= link_to @next, class: 'page-through-link next hide' do %>
    <div class="caret"></div>
  <% end %>
<% end %>

