<div class="content">
  <p>
    If you have questions or would like to be involved in this campaign, please send us a message! We would love to hear from you.
  </p>
  
  <% if flash.now[:notice] %>
    <p>
      <%= flash.now[:notice] %>
    </p>
  <% else %>
    <%= form_tag("/contact", method: "post") do %>
      <p>
        <%= label_tag :email %><br>
        <%= email_field_tag :email %>
      </p>
      
      <p>
        <%= label_tag :subject %><br>
        <%= text_field_tag :subject %>
      </p>
      
      <p>
        <%= label_tag :message %><br>
        <%= text_area_tag :message, nil, rows: 5 %>
      </p>
      
      <%= submit_tag("Send") %>
      
      <% if flash.now[:error] %>
        <p>
          <%= flash.now[:error] %>
        </p>
      <% end %>
    <% end %>
  <% end %>
</div>