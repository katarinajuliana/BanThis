*
{
  box-sizing: border-box;
}

body
{
  padding: 20px;
  text-align: center;
}

img
{
  max-width: 100%;
}

ol,
ul
{
  padding: 0;
  margin: 0;
  list-style-type: none;
}

form
{
  max-width: 600px;
  margin: 0 auto;
}

input,
textarea
{
  width: 100%;
  padding: 12px;
  margin: 6px 0 4px;
  border: 1px solid #ccc;
  background: #fafafa;
  font-size: 12px;
  line-height: normal;
  border-radius: 2px;
}

input[type="submit"],
button
{
  width: auto;
  background-color: transparent;
  color: #272727;
  padding: 1em 2.5em;
  border: 2px solid #272727;
  font-size: 11px;
  text-transform: uppercase;
  font-weight: 700;
  cursor: pointer;
  transition: 0.1s background-color linear, 0.1s color linear;
}

input[type="submit"]:hover,
button:hover
{
  background-color: #272727;
  color: white;
}

.bold
{
  font-weight: 700;
}

.hidden
{
  display: none;
}

.half
{
  width: 50%;
}

.logo
{
  margin: -15px auto;
  max-width: 900px;
}

.logo a
{
  display: block;
  padding-bottom: 44%;
  background-image: url(<%= asset_path 'logo.png' %>);
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}

.navigation
{
  margin: 30px 0 60px;
}

.navigation li,
select.navigation
{
  display: inline-block;
  font-size: 13px;
}

.navigation a,
select.navigation
{
  font-family: 'Open Sans', sans-serif;
  letter-spacing: 2px;
  text-transform: uppercase;
  text-decoration: none;
  padding: 0 0.8em;
  
  color: #666;
  transition-property: color;
  transition-duration: 0.2s;
}

.navigation .active a,
.navigation li:hover a,
select.navigation
{
  color: #a8a8a8;
}

select.navigation
{
  width: 100%;
  border-color: transparent;
  background-color: transparent;
}

ol.navigation
{
  display: none;
}

@media only screen and (min-width: 702px)
{
  body
  {
    padding: 20px;
  }
  
  ol.navigation
  {
    display: block;
  }
  
  select.navigation
  {
    display: none;
  }
}

.content
{
  color: #424242;
  font-family: 'Lora', serif;
  text-align: left;
  line-height: 1.7em;
  margin: 0 auto;
  max-width: 1000px;
}

.content.gallery
{
  max-width: 100%;
}

.content a
{
  color: rgba(18,18,18,1);
}

.content a:hover
{
  color: rgba(89,89,89,1);
}

.content.gallery a
{
  text-decoration: none;
}
